{% extends 'EdryAssetManagerBundle::layout.html.twig' %}

{% block title %}Edit Asset{% endblock %}

{% block content %}
<h1>Edit Asset</h1>

<form action="{{ path('techassets_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('techassets') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('techassets_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}