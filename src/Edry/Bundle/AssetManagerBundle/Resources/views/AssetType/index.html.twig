{% extends 'EdryAssetManagerBundle::layout.html.twig' %}

{% block title %}View Assets{% endblock %}


{% block content %}
<h1>Asset list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Model</th>
            <th>Manufacturer</th>
            <th>Cost</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.name }}</td>
            <td>{{ entity.category }}</td>
            <td>{{ entity.model }}</td>
            <td>{{ entity.manufacturer }}</td>
            <td>{{ entity.cost }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('assettype_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('assettype_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('assettype_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}